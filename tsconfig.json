{
  "compilerOptions": {
    "target": "es2017",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["esNext", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true
  },
  "include": ["test/**/*.ts", "src/**/*.ts", "public/**/*"],
  "exclude": ["**/*.js", "node_modules"]
}
